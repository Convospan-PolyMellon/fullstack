generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id           String    @id @default(uuid())
  fullName     String?
  email        String?
  linkedIn     String?
  company      String?
  jobTitle     String?
  location     String?
  status       String    @default("NEW")
  tags         String[]
  isEnriched   Boolean   @default(false)
  enrichedData Json?
  embedding    Json?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  campaignId   String?
  teamId       String?
  emails       Email[]
  campaign     Campaign? @relation(fields: [campaignId], references: [id])
  team         Team?     @relation(fields: [teamId], references: [id])
  meetings     Meeting[]
  messages     Message[]

  @@index([teamId])
}

model Campaign {
  id             String            @id @default(uuid())
  name           String
  description    String?
  audience       String?
  status         String            @default("draft")
  type           String            @default("standard") // standard, smart
  aiConfig       Json?             // Stores { tone, goal, context, prompt }
  targetCount    Int               @default(0)
  completedCount Int               @default(0)
  leads          Int               @default(0) // User requested Int field for count
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  teamId         String?
  ownerId        String?
  team           Team?             @relation(fields: [teamId], references: [id])
  owner          User?             @relation("owner_campaigns", fields: [ownerId], references: [id])
  variants       CampaignVariant[]
  emails         Email[]
  
  // Relations
  leadList       Lead[]            // Renamed relation to avoid conflict with 'leads' Int

  activities     Activity[]

  @@index([status])
  @@index([teamId])
}

model CampaignVariant {
  id         String   @id @default(uuid())
  campaignId String
  subject    String
  body       String
  weight     Int      @default(50)
  sentCount  Int      @default(0)
  openCount  Int      @default(0)
  replyCount Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  campaign   Campaign @relation(fields: [campaignId], references: [id])

  @@index([campaignId])
}

model ActivityLog {
  id        String   @id @default(uuid())
  action    String
  meta      Json?
  createdAt DateTime @default(now())
}

model Activity {
  id         String   @id @default(uuid())
  type       String
  message    String?
  meta       Json?
  createdAt  DateTime @default(now())
  campaign   Campaign? @relation(fields: [campaignId], references: [id])
  campaignId String?
  agentId    String?
}

model Agent {
  id          String   @id @default(uuid())
  name        String
  description String?
  status      String   @default("idle")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Job {
  id          String    @id @default(uuid())
  type        String
  status      String    @default("pending")
  priority    Int       @default(0)
  payload     Json
  result      Json?
  error       String?
  attempts    Int       @default(0)
  maxAttempts Int       @default(3)
  processAt   DateTime  @default(now())
  createdAt   DateTime  @default(now())
  startedAt   DateTime?
  completedAt DateTime?
  teamId      String?
  team        Team?     @relation(fields: [teamId], references: [id])

  @@index([status, priority])
  @@index([type])
  @@index([teamId])
}

model ICP {
  id          String   @id @default(uuid())
  name        String
  description String?
  criteria    Json
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
}

model Email {
  id         String    @id @default(uuid())
  leadId     String
  campaignId String
  subject    String
  body       String
  status     String    @default("sent")
  providerId String?
  openedAt   DateTime?
  clickedAt  DateTime?
  createdAt  DateTime  @default(now())
  campaign   Campaign  @relation(fields: [campaignId], references: [id])
  lead       Lead      @relation(fields: [leadId], references: [id])

  @@index([leadId])
  @@index([campaignId])
}

model Settings {
  id           String   @id @default(uuid())
  userId       String   @unique
  name         String?
  email        String?
  theme        String   @default("dark")
  apiKeyOpenAI String?
  apiKeyGemini String?
  hubspotApiKey String?
  crmConfig    Json?    // Stores mapping rules, sync status
  liCookie     String?
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id])
  notifications NotificationSettings?
}

model NotificationSettings {
  id        String   @id @default(uuid())
  userId    String   @unique
  settingsId String  @unique
  emailGlobal Boolean @default(true)
  emailCampaign Boolean @default(true)
  emailLeads Boolean @default(true)
  inAppGlobal Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  settings  Settings @relation(fields: [settingsId], references: [id])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  type      String
  message   String
  meta      Json?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
}

model Team {
  id           String          @id @default(uuid())
  name         String
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  credits      Int             @default(100)
  campaigns    Campaign[]
  templates    EmailTemplate[]
  jobs         Job[]
  leads        Lead[]
  meetings     Meeting[]
  subscription Subscription?
  members      TeamMember[]
  webhooks     Webhook[]
  transactions CreditTransaction[]
}

model CreditTransaction {
  id          String   @id @default(uuid())
  teamId      String
  amount      Int      // Negative for usage, positive for top-up
  description String
  type        String   // "usage", "topup", "bonus"
  meta        Json?    // Store jobId or paymentId
  createdAt   DateTime @default(now())
  team        Team     @relation(fields: [teamId], references: [id])

  @@index([teamId])
}

model Subscription {
  id                   String   @id @default(uuid())
  teamId               String   @unique
  razorpayCustomerId   String?
  razorpaySubscriptionId String? @unique
  razorpayPlanId       String?
  status               String
  currentPeriodEnd     DateTime
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  team                 Team     @relation(fields: [teamId], references: [id])
}

model Webhook {
  id        String   @id @default(uuid())
  url       String
  events    String[]
  secret    String?
  isActive  Boolean  @default(true)
  teamId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  team      Team     @relation(fields: [teamId], references: [id])

  @@index([teamId])
}

model Meeting {
  id        String   @id @default(uuid())
  title     String
  startTime DateTime
  endTime   DateTime
  notes     String?
  leadId    String?
  teamId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lead      Lead?    @relation(fields: [leadId], references: [id])
  team      Team     @relation(fields: [teamId], references: [id])

  @@index([teamId])
  @@index([leadId])
}

model EmailTemplate {
  id        String   @id @default(uuid())
  name      String
  subject   String
  body      String
  teamId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  team      Team     @relation(fields: [teamId], references: [id])

  @@index([teamId])
}

model TeamMember {
  id        String   @id @default(uuid())
  teamId    String
  userId    String?
  email     String
  role      String   @default("member")
  status    String   @default("invited")
  createdAt DateTime @default(now())
  team      Team     @relation(fields: [teamId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])

  @@index([teamId])
  @@index([userId])
}

model User {
  id            String       @id @default(uuid())
  email         String       @unique
  emailVerified DateTime?
  name          String?
  image         String?
  address       String?
  role          String       @default("user")
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  settings      Settings?
  memberships   TeamMember[]
  
  accounts      Account[]
  sessions      Session[]
  campaigns     Campaign[]   @relation("owner_campaigns")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Message {
  id        String   @id @default(uuid())
  leadId    String
  content   String
  direction String   // INBOUND, OUTBOUND
  platform  String   // LINKEDIN, EMAIL
  sender    String?  // Name of sender
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  lead      Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  @@index([leadId])
}
